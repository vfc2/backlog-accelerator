{
  "name": "backlog-accelerator",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React desktop app for backlog generation with Azure AI",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "dev": "run-p watch:main dev:renderer dev:electron",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config frontend/vite.config.ts",
    "package": "npm run build && electron-builder",
    "dev:renderer": "vite dev --config frontend/vite.config.ts",
    "dev:electron": "wait-on dist/main/main.js http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "lint": "eslint .",
    "typecheck": "npm run typecheck:main && npm run typecheck:renderer",
    "typecheck:main": "tsc -p tsconfig.main.json --noEmit",
    "typecheck:renderer": "cd frontend && tsc -b --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "npm run test:unit",
    "check": "npm run lint && npm run typecheck && npm run test:unit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.1",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.48.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.47.0",
    "vite": "^5.4.3",
    "vitest": "^2.1.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.backlog.accelerator",
    "productName": "Backlog Accelerator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "snap"],
      "category": "Development"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "bash -c 'npm run typecheck'",
      "bash -c 'npm run test:unit || exit 0'"
    ]
  }
}
